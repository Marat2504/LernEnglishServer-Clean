{
  "eslint.experimental.useFlatConfig": true, // ВАЖНО: Включает flat config (.eslint.config.mjs)
  "eslint.format.enable": true, // ESLint как форматтер
  "eslint.lintTask.enable": true, // Авто-линтинг при сохранении
  "files.eol": "\n", // Глобально LF для всех файлов
  "prettier.endOfLine": "lf", // Prettier использует LF

  // Автоформатирование при сохранении
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit", // Автофикс ESLint (включая Prettier)
    "source.formatDocument": "explicit"
  },

  // Форматтеры по языкам
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  }
}
